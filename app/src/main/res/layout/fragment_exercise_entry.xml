<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edittext_exercise_name"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:inputType="text"
        android:hint="@string/edit_text_exercise_entry_name"/>

    <EditText
        android:id="@+id/edittext_exercise_muscle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:inputType="text"
        android:hint="@string/edit_text_exercise_entry_muscle"/>

    <Button
        android:id="@+id/button_exercise_entry"
        android:textSize="@dimen/font_size_final_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>