<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_workout"
    tools:context="com.example.mkim11235.gainztracker.ExerciseHistoryActivity">

    <ListView
        android:id="@+id/listview_exercise_history"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- TO DO: Somehow refactor imagebuttons in main and exercise activity xml -->
    <ImageButton
        android:id="@+id/image_button_add_exercise_history_entry"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:background="@drawable/oval"
        android:src="@mipmap/ic_plus"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom|right"/>

</FrameLayout>
