<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/image_button_exercise_history_decrement_weight"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="#00000000"
            android:src="@mipmap/ic_minus" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/image_button_exercise_history_decrement_weight">

            <EditText
                android:id="@+id/edittext_exercise_history_entry_weight"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                android:inputType="number"
                android:hint="@string/placeholder_number"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/weight_unit"
                android:textSize="30sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageButton
            android:layout_alignParentEnd="true"
            android:id="@+id/image_button_exercise_history_increment_weight"
            android:layout_marginRight="40dp"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="#00000000"
            android:src="@mipmap/ic_plus" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/image_button_exercise_history_decrement_reps"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="#00000000"
            android:src="@mipmap/ic_minus" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/image_button_exercise_history_decrement_reps">

            <EditText
                android:id="@+id/edittext_exercise_history_entry_reps"
                android:textSize="30sp"
                android:hint="@string/placeholder_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:inputType="number" />

            <TextView
                android:text="@string/reps"
                android:textSize="30sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/image_button_exercise_history_increment_reps"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="#00000000"
            android:src="@mipmap/ic_plus" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edittext_exercise_history_entry_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:inputType="date"
        android:onClick="showDatePickerDialog"
        android:focusableInTouchMode="false"
        android:hint="Date"/>

    <Button
        android:id="@+id/button_exercise_history_entry_final"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>