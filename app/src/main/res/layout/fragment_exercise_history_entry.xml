<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include android:id="@+id/space_center_horizontal_weight"
            layout="@layout/space_center_horizontal" />

        <include android:id="@+id/image_button_exercise_history_decrement_weight"
            layout="@layout/image_button_decrement" />

        <include android:id="@+id/image_button_exercise_history_increment_weight"
            layout="@layout/image_button_increment" />

        <EditText
            android:id="@+id/edittext_exercise_history_entry_weight"
            android:textSize="@dimen/font_size_edittext"
            android:inputType="number"
            android:hint="@string/placeholder_number"
            android:layout_toLeftOf="@id/space_center_horizontal_weight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/image_button_exercise_history_decrement_weight" />

        <TextView
            android:text="@string/weight_unit"
            android:textSize="@dimen/font_size_edittext"
            android:layout_marginLeft="@dimen/margin_unit_from_entry"
            android:layout_toRightOf="@id/space_center_horizontal_weight"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/image_button_exercise_history_decrement_weight" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include android:id="@+id/space_center_horizontal_reps"
            layout="@layout/space_center_horizontal" />

        <include android:id="@+id/image_button_exercise_history_decrement_reps"
            layout="@layout/image_button_decrement" />

        <include android:id="@+id/image_button_exercise_history_increment_reps"
            layout="@layout/image_button_increment" />

        <EditText
            android:id="@+id/edittext_exercise_history_entry_reps"
            android:textSize="@dimen/font_size_edittext"
            android:hint="@string/placeholder_number"
            android:layout_toLeftOf="@id/space_center_horizontal_reps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/image_button_exercise_history_decrement_reps"
            android:inputType="number" />

        <TextView
            android:text="@string/reps"
            android:textSize="@dimen/font_size_edittext"
            android:layout_toRightOf="@id/space_center_horizontal_reps"
            android:layout_marginLeft="@dimen/margin_unit_from_entry"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/image_button_exercise_history_decrement_reps"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/edittext_exercise_history_entry_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/font_size_edittext"
        android:focusableInTouchMode="false"
        android:hint="Date"/>

    <Button
        android:id="@+id/button_exercise_history_entry_final"
        android:textSize="@dimen/font_size_final_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>